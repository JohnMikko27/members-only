extends layout 
block content 

    h1 Create your own message 

    form(action="", method="post") 
        div 
            label(for='messageTitle') Title 
            input#messageTitle(type='text', name='messageTitle', placeholder='title', required)
        div 
            label(for='messageText') Text 
            input#messageText(type='text', name='messageText', placeholder='text', required)
        button(type='submit') Submit
    
    if errors   
        ul 
            for error in errors 
                li= error.msg